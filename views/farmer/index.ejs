    buyersListContainer.innerHTML = ""; // Clear table before updating

    // Calculate Slice Range
    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;
    const ordersToShow = ordersData.slice(start, end);

    // Populate Table
    if (ordersToShow.length === 0) {
        buyersListContainer.innerHTML = `<tr><td colspan="6">No orders available</td></tr>`;
        return;
    }

    ordersToShow.forEach(order => {
        const row = document.createElement("tr");
        row.id = `order-${order._id}`;  // Unique ID for each order row
        row.innerHTML = `
            <td>${order.buyerName}</td>
            <td>${order.phoneNumber}</td> 
            <td>${order.productName}</td>
            <td>${order.quantity}</td>
            <td>${order.totalPrice}</td>
            <td>${order.orderStatus}</td>
            <td>${order.status}</td>
            <td class="action-buttons" id="order-${order._id}">
                ${order.order,status.toLowerCase() !== "complete" && order.status.toLowerCase() !== "failed" ? `
                    <button class="complete-btn" id="complete-${order._id}" onclick="processOrder('${order._id}', 'complete')">
                        ‚úî Complete
                    </button>
                    <button class="failed-btn" id="failed-${order._id}" onclick="processOrder('${order._id}', 'failed')">
                        ‚úñ Failed
                    </button>
                ` : order.status.toLowerCase() === "complete" ? `
                    <button class="complete-btn" id="complete-${order._id}" disabled>‚úî Complete</button>
                ` : `
                    <button class="failed-btn" id="failed-${order._id}" disabled>‚úñ Failed</button>
                `}             
                <button class="delete-btn" onclick="delete('${order._id}')">üóë Delete</button>
            </td>
            <td>
                ${
                order.status.toLowerCase() === "Complete"
                    ? order.completedAt
                    ? new Date(order.completedAt).toLocaleString()
                    : "No Date"
                    : order.status.toLowerCase() === "failed"
                    ? order.failedAt
                    ? new Date(order.failedAt).toLocaleString()
                    : "No Date"
                    : "‚Äî"
                }
            </td>
        `;
        buyersListContainer.appendChild(row);
    });
}

// Function to Generate Pagination Buttons
function generatePagination() {
    const paginationContainer = document.getElementById('pagination');
    paginationContainer.innerHTML = ""; // Clear old buttons

    for (let i = 1; i <= totalPages; i++) {
        const button = document.createElement("button");
        button.innerText = i;
        button.className = i === currentPage ? "active-page" : "";
        button.onclick = () => {
            currentPage = i;
            displayOrders();
            generatePagination();
        };
        paginationContainer.appendChild(button);
    }
}


// Function to Process Order (Approve/Reject) and Save to DB
function processOrder(orderId, action) {
    fetch('/farmer/processOrder', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ orderId, action })
    })
    .then(response => response.json())
    .then(data => {
        console.log(data.message);

        // Update local ordersData array to reflect changes
        ordersData = ordersData.map(order => {
            if (order._id === orderId) {
                order.status = action === "complete" ? "Complete" : "Failed";
            }
            return order;
        });

        // Refresh order list to show the updated status
        displayOrders();

        // Update the UI for action buttons
        const completeBtn = document.getElementById(`complete-${orderId}`);
        const failedBtn = document.getElementById(`failed-${orderId}`);

        if (action === "complete") {
            if (completeBtn) {
                completeBtn.innerText = "‚úî Complete";
                completeBtn.disabled = true;
            }
            if (failedBtn) failedBtn.remove(); // Remove reject button
        } else if (action === "failed") {
            if (failedBtn) {
                failedBtn.innerText = "‚úî Failed";
                failedBtn.disabled = true;
            }
            if (completeBtn) completeBtn.remove(); // Remove approve button
        }
    })
    .catch(error => console.error("Error processing order:", error));
}

// Function to Delete Order from the Table (Not the Database)
function deleteOrder(orderId) {
    if (confirm("Are you sure you want to delete this order?")) {
        fetch(`/buyer/deleteOrder/${orderId}`, { method: 'POST' })
        .then(response => response.json())
        .then(data => {
            console.log(data.message);
            
            // Remove from local array
            ordersData = ordersData.filter(order => order._id !== orderId);
            
            // Remove the row from the table
            const row = document.querySelector(`delete-${orderId}`);
            if (row) row.remove();
        })
        .catch(error => console.error('Error deleting order:', error));
    }
}

