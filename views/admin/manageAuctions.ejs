<script>
// Function to open the session modal
function openSessionModal() {
    const modal = document.getElementById("sessionModal");
    modal.style.display = "block";
}

// Function to close the session modal
function closeSessionModal() {
    const modal = document.getElementById("sessionModal");
    modal.style.display = "none";
}

// Function to confirm session creation
function confirmSession() {
    const sessionDate = document.getElementById("sessionDate").value;
    const sessionTime = document.getElementById("sessionTime").value;

    if (!sessionDate || !sessionTime) {
        alert("Please select both session date and time.");
        return;
    }

    // Proceed with session creation (this is where you can add your logic to save the session)
    console.log(`New session created on ${sessionDate} at ${sessionTime}`);

    // Close the modal after confirming
    closeSessionModal();
}
</script>
