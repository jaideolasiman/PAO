    <!-- Basic CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .session-container {
            margin: 20px auto;
            width: 90%;
            background-color: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            position: relative;
        }

        .header h2 {
            margin: 0;
        }

        .leave-button-header {
            background-color: #3599dc;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 0.9rem;
            cursor: pointer;
        }

        .leave-button-header:hover {
            background-color: #2fece3;
        }

        .timer {
            text-align: center;
            font-size: 1.2rem;
            margin: 10px 0;
        }

        .leaderboard,
        .other-bidders {
            display: flex;
            justify-content: space-between;
            margin: 10px 0;
        }

        .card {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
            flex: 1;
            margin: 5px;
            border-radius: 5px;
            box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
        }

        .card.active {
            border: 2px solid #4caf50;
        }

        .input-section {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 3px;
        }

        .btn:hover {
            background-color: #45a049;
        }

        .other-bidders .bidder {
            flex: 1;
            border: 1px solid #ddd;
            padding: 5px;
            margin: 5px;
            text-align: center;
            font-size: 0.9rem;
            background-color: #f9f9f9;
        }

        button:hover {
            background-color: #218838;
        }
    </style>
</head>

