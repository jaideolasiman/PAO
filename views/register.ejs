<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="stylesheet" href="/public/css/styless.css"> </head>
<body>
  <form id="signUpForm" action="/doRegister" method="POST" enctype="multipart/form-data">
  <div class="form-container" id="form-container">
    <h2>Create an Account</h2>
    <p>It's free and always will be.</p>

    <div class="preview-container">
      <img id="profilePreview" src="" alt="Profile Picture Preview">
    </div>
    <label for="image">Choose Profile Picture</label>
    <input type="file" id="image" name="image" accept="image/*" onchange="previewImage(event)">

      <div class="radio-group">
        <label><input type="radio" name="role" value="farmer" required> I am a Farmer/Seller</label>
        <label><input type="radio" name="role" value="buyer" required> I am a Buyer</label>
      </div>

      <div class="row">
        <input type="text" name="firstName" placeholder="First Name" required>
        <span class="checkmark">✔</span>
        <input type="text" name="lastName" placeholder="Last Name" required>
        <span class="checkmark">✔</span>
      </div>

      <input type="email" name= "email" placeholder="Email" required>
      <span class="checkmark">✔</span>

      <div class="row">
        <input type="password" name="password" placeholder="Enter your password" required>
        <input type="password" name="confirmPassword" placeholder="Confirm your password" required>
      </div>

      <input type="text" name="phoneNumber" placeholder="Phone Number" required>

      <label>Your Gender</label>
      <div class="radio-group">
        <label><input type="radio" name="gender" value="male" required> Male</label>
        <label><input type="radio" name="gender" value="female" required> Female</label>
      </div>

      <button type="submit">Create an Account</button>

    <div class="form-toggle">
      <p>Already have an account?</p>
        <a href="/login" onclick="toggleForms()">Sign In</a> </div>
  </div>
  
  </form>
  <script>
    function previewImage(event) {
      const reader = new FileReader();
      reader.onload = function () {
        const output = document.getElementById('profilePreview');
        output.src = reader.result;
      };
      reader.readAsDataURL(event.target.files[0]);
    }
  </script>
</body>
</html>